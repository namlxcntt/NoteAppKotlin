<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_background"
    tools:context=".ui.search.SearchFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_edittext_search"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="0.5"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="9"
            android:background="@drawable/custom_edittext_search"
            android:backgroundTint="@android:color/transparent" />

        <ImageView
            android:id="@+id/btn_speech_to_text"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="0.5"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_baseline_mic_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_select_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:drawableEnd="@drawable/ic_color_palette"
        android:drawablePadding="@dimen/_4sdp"
        android:fontFamily="@font/futurabook"
        android:paddingStart="@dimen/_3sdp"
        android:text="Search By color"
        android:textColor="@color/color_text"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/linearLayout"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

    <co.ceryle.radiorealbutton.RadioRealButtonGroup
        android:id="@+id/radioRealButtonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tv_select_color"
        app:rrbg_animateDrawables_enter="overshoot"
        app:rrbg_animateTexts_enter="overshoot"
        app:rrbg_backgroundColor="@color/color_violet_dark"
        app:rrbg_radius="10dp"
        app:rrbg_selectorColor="@color/color_violet_dark2"
        app:rrbg_selectorSize="@dimen/_1sdp">

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_drawable="@drawable/custom_circle_1"
            app:rrb_drawableHeight="@dimen/_30sdp"
            app:rrb_drawablePadding="@dimen/_6sdp"
            app:rrb_drawableWidth="@dimen/_30sdp"
            app:rrb_rippleColor="@color/color_circle1" />

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_drawable="@drawable/custom_circle_2"
            app:rrb_drawableHeight="@dimen/_30sdp"
            app:rrb_drawablePadding="@dimen/_6sdp"
            app:rrb_drawableWidth="@dimen/_30sdp" />

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_drawable="@drawable/custom_circle_3"
            app:rrb_drawableHeight="@dimen/_30sdp"
            app:rrb_drawablePadding="@dimen/_6sdp"
            app:rrb_drawableWidth="@dimen/_30sdp"
            app:rrb_rippleColor="@color/color_circle3" />

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_drawable="@drawable/custom_circle_4"
            app:rrb_drawableHeight="@dimen/_30sdp"
            app:rrb_drawablePadding="@dimen/_6sdp"
            app:rrb_drawableWidth="@dimen/_30sdp"
            app:rrb_rippleColor="@color/color_circle4" />

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_drawable="@drawable/custom_circle_5"
            app:rrb_drawableHeight="@dimen/_30sdp"
            app:rrb_drawablePadding="@dimen/_6sdp"
            app:rrb_drawableWidth="@dimen/_30sdp"
            app:rrb_rippleColor="@color/color_circle5" />

    </co.ceryle.radiorealbutton.RadioRealButtonGroup>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/gif_deadpool"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="ewewe"
        android:background="@color/color_main_background"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioRealButtonGroup"
        app:lottie_autoPlay="true"
        app:lottie_fileName="pumped_up.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tv_null_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futurabook"
        android:gravity="center"
        android:text="No result search data,\n Please check input"
        android:textColor="@color/color_text"
        android:textSize="@dimen/_14ssp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/gif_deadpool"
        app:layout_constraintStart_toStartOf="@+id/gif_deadpool"
        app:layout_constraintTop_toBottomOf="@+id/gif_deadpool" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/radioRealButtonGroup" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nothing to show"
        android:textSize="@dimen/_15ssp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>